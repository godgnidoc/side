{
    "include": ["src"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "removeComments": true,
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "build/out",
        "target": "ES2015",
        "baseUrl": "src/public",
        "paths": {
            "*": ["*"]
        }
    },
}