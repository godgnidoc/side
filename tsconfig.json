{
    "include": ["src"],
    "exclude": ["node_modules", "build"],
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "build/dist",
        "target": "ESNext"
    }
}